<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/frame"
    android:orientation="vertical"
    android:padding="2dip"
    android:paddingTop="2dip">


    <TextView
        android:id="@+id/countdownPrimary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:fontFamily="Roboto-Condensed"
        android:gravity="center_vertical|center_horizontal"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:textColor="#c8f00250"
        android:textSize="30sp"
        tools:text="12"/>

    <TextView
        android:id="@+id/primaryEvent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:fontFamily="Roboto-Condensed"
        android:gravity="center_vertical|center_horizontal"
        android:scrollHorizontally="true"
        android:textColor="#7C1136"
        android:textSize="18sp"
        tools:text="Capodanno"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#98f00250"
        android:orientation="horizontal"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="Roboto bold"
            android:gravity="start|center_vertical"
            android:text="@string/app_name"
            android:textColor="#7C1136"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/secondaryEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:text="@string/days_to_event"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:text="16 days to Piscina"/>
    </LinearLayout>
</LinearLayout>