<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddEvent">

    <EditText
        android:id="@+id/frag_add_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/holiday_name"
        android:inputType="text" />

    <TextView
        android:id="@+id/frag_add_holiday_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15 November"/>

    <Spinner
        android:id="@+id/frag_add_holiday_periodicity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/frag_add_holiday_cancel" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/frag_add_event_confirm" />


</LinearLayout>
